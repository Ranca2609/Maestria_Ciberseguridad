# Gateway Dockerfile
FROM node:20-alpine AS builder

WORKDIR /app

# Copiar archivos de configuraci贸n
COPY package*.json ./
COPY tsconfig.json ./
COPY nest-cli.json ./

# Instalar dependencias
RUN npm install

# Copiar c贸digo fuente y proto
COPY src ./src
COPY proto ./proto

# Compilar TypeScript
RUN npm run build

# Imagen de producci贸n
FROM node:20-alpine AS production

WORKDIR /app

# Copiar archivos necesarios
COPY package*.json ./

# Instalar solo dependencias de producci贸n
RUN npm install --omit=dev

# Copiar archivos compilados y proto
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/proto ./proto

# Exponer puerto REST
EXPOSE 3001

# Variables de entorno
ENV GRPC_URL=grpc-server:50051
ENV GATEWAY_PORT=3001

# Comando para iniciar el gateway REST
CMD ["node", "dist/main-gateway.js"]
